<div class="row">
  <div class="col-sm-12 col-md-12 col-lg-3">
    <p>Listas</p>
    <ul class="list-group">
      <%= render "shared/lists" %>
    </ul>
  </div>
  <div class="col-sm-12 col-md-12 col-lg-9">
    <p>Don't forget</p>

    <%= @list.name %>

    <% if current_user == @list.user %>
      <%= link_to (image_tag "edit.png"), edit_list_path(@list) %>
    <% else %>
      <%= link_to (image_tag "unfollow.png"), follow_path(user_id: current_user.id, list_id: @list.id), method: :delete, class: 'unfollow-link' %>
    <% end %>

    <table class="table">
      <tr>
        <th>Description</th>
        <th>Status</th>
      </tr>
    <% @list.tasks.each do |task| %>
      <tr>
        <td><%= task.description %></td>
				<td><%= task.status.delete "task_" %></td>
      <tr>
    <% end %>
    </table>
  </div>
</div>
