<%= form_for @list, url: { action: "update" }, remote: true do |f| %>
  <div class="form-group row">
    <%= f.label :name, "Name:", class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= f.text_field :name, class: "form-control validate" %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :type_access, "Type access:", class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <div class="radio">
        <%= f.radio_button :type_access, :shared_all %> Public
        <%= f.radio_button :type_access, :private_me %> Private
      </div>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :status, "Status:", class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= @list.status %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-10">
      <%= f.submit "Save List", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
<div class="form-group row">
  <div class="col-sm-10">
    <%= link_to 'Delete', @list, method: :delete, class: "btn btn-primary", data: { confirm: 'Are you sure?' } %>
  </div>
</div>
