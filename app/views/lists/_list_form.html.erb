<%= form_for(setup_list @list) do |form_list| %>

  <!-- Lists -->
  <div class="form-group row">
    <div class="col-sm-1">
      <%= form_list.check_box :status, {:checked => form_list.object.list_done?}, :list_done, :list_pend  %>
    </div>
    <div class="col-sm-11">
      <%= form_list.text_field :name, class: "form-control validate" %>
    </div>
  </div>
  <div class="form-group row">
    <%= form_list.label :type_access, "Private:", class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= form_list.check_box(:type_access, {:checked => form_list.object.list_private?}, :list_private, :list_shared) %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-10">
      <%= form_list.submit 'Save', class: "btn btn-primary" %>
      <%= link_to 'Delete', @list, method: :delete, class: "btn btn-primary", data: { confirm: 'Are you sure delete List?' } %>
    </div>
  </div>

  <!-- Tasks -->
  <table class="table table-hover">
    <thead>
      <tr>
        <th scope="col">Task Done?</th>
        <th scope="col">Description</th>
        <th scope="col">Depending</th>
        <th scope="col">Status</th>
        <th scope="col">Delete?</th>
      </tr>
    </thead>
    <tbody id="tab-task">
      <%= form_list.fields_for :task do |form_task| %>
        <tr>
          <td><%= form_task.check_box(:status, {:checked => form_task.object.task_done?}, :task_done, :task_pend) %></td>
          <td><%= form_task.text_field :description %></td>
          <td><%= form_task.text_field :father_id %></td>
          <td><%= form_task.object.status %></td>
          <% if form_task.object.persisted? %>
            <td><%= form_task.check_box :_destroy %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class="form-group row">
    <div class="col-sm-10">
      <%= form_list.submit 'New', class: "btn btn-primary" %>
    </div>
  </div>

<% end %>
