<div class="task_item">
  <%= task.check_box(:status, {:checked => task.object.task_done?}, :task_done, :task_pend) %>
  <%= task.text_field :description, class: "description" %>
  <%= link_to_remove_task (image_tag "remove.png"), task %>

  <!-- Subtasks -->
  <%= task.fields_for :subtasks do |st| %>
    <%= render 'subtask_fields', task: st %>
  <% end %>
  <div class="new_content">
    <%= link_to_add_task (image_tag "add.png"), task, :subtasks %>
    Add subtask
  </div>
</div>
