<p>My Lists</p>
<% @lists.each do |l| %>
  <li class="list-group-item d-flex justify-content-between align-items-center">
    <%= link_to l.name, list_path(l) %>
    <span class="badge badge-primary badge-pill">0</span>
  </li>
<% end %>
<%= render "shared/new_list" %>

<p>Follow Lists</p>
<% @lists_following.each do |lf| %>
  <li class="list-group-item d-flex justify-content-between align-items-center">
    <%= link_to lf.name, list_path(lf) %>
    <span class="badge badge-primary badge-pill">0</span>
  </li>
<% end %>

<li class="list-group-item d-flex justify-content-between align-items-center">
  <%= link_to('Find Users', users_path, class: "btn btn-primary") %>
</li>
